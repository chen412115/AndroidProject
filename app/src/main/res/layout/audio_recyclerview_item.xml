<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:id="@+id/fragment_audio_item_container">
    <ImageView
        android:background="@drawable/kugou_icon"
        android:id="@+id/fragment_audio_item_iv"
        android:layout_width="200dp"
        android:layout_height="120dp" />

    <TextView
        android:textSize="18sp"
        android:textColor="#FFF"
        android:background="#a555"
        android:text="1111"
        android:singleLine="true"
        android:gravity="bottom|center_horizontal"
        android:layout_alignBottom="@+id/fragment_audio_item_iv"
        android:id="@+id/fragment_audio_item_tv"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="30dp" />
</RelativeLayout>